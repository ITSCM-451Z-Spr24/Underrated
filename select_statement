USE lahman;
SELECT 
    p.playerID,
    p.nameFirst,
    p.nameLast,
    ((b.H - b.HR) / (b.AB - b.K - b.HR + b.SF)) + b.OPS + b.SB AS offensiveScore,
    (pt.W + pt.GS) AS pitchingScore
FROM 
    People AS p
JOIN 
    Batting AS b ON p.playerID = b.playerID AND b.yearID = 2022
JOIN 
    Pitching AS pt ON p.playerID = pt.playerID AND pt.yearID = 2022;
